<!DOCTYPE html>
<html lang="en">
  <head>
    <title>SDG</title>
    <meta charset="UTF-8" />
    <meta name="description" content="SDG coding challenge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="index.css" type="text/css" />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <main>
      <section class="nav" role="contentinfo">
        <button class="accordion" id="fit-guide-button">
          FIT GUIDE
        </button>

        <button class="accordion" id="care-button">
          CARE
        </button>
        <button class="accordion" id="materials-button">
          MATERIALS
        </button>
      </section>

      <section id="material-percentages" role="contentinfo">
        <div class="materials panel">
          <p id="cashmere-perc"></p>

          <p id="cashmere"></p>
        </div>
        <div class="materials panel">
          <p id="wool-perc"></p>

          <p id="wool"></p>
        </div>
        <div class="materials panel">
          <p id="modal-perc"></p>

          <p id="modal"></p>
        </div>
      </section>

      <section class="text-area" role="contentinfo"><p id="text"></p></section>
    </main>
    <script type="text/javascript" src="index.js"></script>
  </body>
</html>
